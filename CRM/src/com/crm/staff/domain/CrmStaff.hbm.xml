<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crm.staff.domain">
    <class name="CrmStaff" table="crm_staff">
       <id name="staffId">
           <generator class="uuid"/>
       </id>
        <property name="loginName"/>
        <property name="loginPwd"/>
        <property name="staffName"/>
        <property name="gender"/>
        <property name="onDutyDate">
            <column name="onDutyDate" sql-type="datetime"/>
        </property>

        <!--staff    post   多对一-->
        <many-to-one name="crmPost" class="com.crm.post.domain.CrmPost" column="postId"/>
    </class>
</hibernate-mapping> 