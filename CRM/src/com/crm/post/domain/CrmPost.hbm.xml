<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crm.post.domain">
    <class name="CrmPost" table="crm_post">
       <id name="postId">
           <generator class="uuid"/>
       </id>
        <property name="postName"/>


        <!--post - dept 多对一-->
        <many-to-one name="crmDepartment" class="com.crm.department.domain.CrmDepartment" column="depId"/>
        <!--post -> staff 一对多-->
        <set name="crmStaffSet">
            <key column="postId"></key>
            <one-to-many class="com.crm.staff.domain.CrmStaff"/>
        </set>

    </class>
</hibernate-mapping> 